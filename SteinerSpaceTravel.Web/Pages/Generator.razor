@page "/generator"
@using SteinerSpaceTravel.Web.Services
@inject GenerateService GenerateService

<PageTitle>Generator</PageTitle>

<h1>Generator</h1>

<div class="seed-section">
    <div class="input-label">Seed</div>
    <input type="number" min="@ulong.MinValue" max="@ulong.MaxValue" disabled="@GenerateService.IsGenerating" @bind-value="@GenerateService.SeedFrom" />
    ～
    <input type="number" min="@ulong.MinValue" max="@ulong.MaxValue" disabled="@GenerateService.IsGenerating" @bind-value="@GenerateService.SeedTo" />
</div>

<div class="flex-button">
    <button class="btn btn-primary" disabled="@(!GenerateService.CanGenerate)" @onclick="@GenerateService.DownloadSeedsAsync">Download</button>
    <button class="btn btn-outline-primary" disabled="@(!GenerateService.IsGenerating)" @onclick="@GenerateService.CancelDownload">Cancel</button>
</div>

<p>@GenerateService.Message</p>